<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_75"
    android:elevation="@dimen/dimen_10"
    app:cardCornerRadius="@dimen/dimen_8">

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/round_white">

        <ImageView
            android:id="@+id/merchantlogo_iv"
            android:layout_width="@dimen/dimen_47"
            android:layout_height="@dimen/dimen_47"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/merchantlogo_iv"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_10"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/cardinfo_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="#333333"
                android:textSize="@dimen/font_19"/>

            <TextView
                android:id="@+id/sendticket_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5"
                android:layout_marginTop="@dimen/dimen_10"
                android:text="@string/app_name"
                android:textColor="#333333"
                android:textSize="@dimen/font_14"/>
        </LinearLayout>

        <TextView
            android:id="@+id/sendticket_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_12"
            android:textColor="#ce3d3a"
            android:textSize="@dimen/font_12"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
