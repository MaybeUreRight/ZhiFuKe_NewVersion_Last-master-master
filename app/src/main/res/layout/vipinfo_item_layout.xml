<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vipinfo_coupon"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/coupon_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:text="20元"
        android:textSize="25sp" />
	
    <TextView
        android:id="@+id/coupon_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/coupon_amount"
        android:text="优惠券"
        android:textSize="25sp" />
     <TextView
        android:id="@+id/coupon_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/coupon_type"
        android:text="满100元可用"
        android:textSize="20sp" />

    <Button
        android:id="@+id/coupon_select_iv"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="@color/white"
        android:background="@drawable/btn_green_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp" 
        android:text="使用"/>

</RelativeLayout>