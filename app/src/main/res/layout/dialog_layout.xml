<com.weilay.pos2.percent.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:background="#3D3938"
        android:gravity="center"
        android:text="提示"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_heightPercent="20%" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="内容"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_heightPercent="20%" />

    <TextView
        android:id="@+id/enter_dialog"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/but_select_blue"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_heightPercent="20%" />

    <TextView
        android:id="@+id/dialog_cancel"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:background="@drawable/but_select_red"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_heightPercent="20%" />

</com.weilay.pos2.percent.PercentLinearLayout>