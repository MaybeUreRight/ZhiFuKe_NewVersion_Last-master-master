<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <include
        android:id="@+id/verify_title"
        layout="@layout/title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_133"
        android:layout_marginEnd="@dimen/dimen_13"
        android:layout_marginLeft="@dimen/dimen_12"
        android:layout_marginRight="@dimen/dimen_13"
        android:layout_marginStart="@dimen/dimen_12"
        android:layout_marginTop="@dimen/dimen_22"
        android:background="#f2f2f2">

        <ImageView
            android:id="@+id/verify_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dimen_14"
            android:layout_marginStart="@dimen/dimen_14"
            android:layout_marginTop="@dimen/dimen_12"
            android:scaleType="center"
            android:src="@drawable/verify_scan" />

        <TextView
            android:id="@+id/verify_change_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/verify_change"
            android:layout_alignTop="@id/verify_change"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_marginStart="@dimen/dimen_8"
            android:layout_toEndOf="@id/verify_change"
            android:layout_toRightOf="@id/verify_change"
            android:text="@string/verify_change"
            android:textColor="#333333"
            android:textSize="@dimen/font_13" />

        <TextView
            android:id="@+id/verify_edittext_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dimen_12"
            android:layout_marginEnd="@dimen/dimen_14"
            android:layout_marginLeft="@dimen/dimen_14"
            android:layout_marginRight="@dimen/dimen_14"
            android:layout_marginStart="@dimen/dimen_14"
            android:gravity="end"
            android:maxLines="1"
            android:text="@string/verify_input"
            android:textColor="#999999"
            android:textSize="@dimen/font_30" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/verify_keyboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="@dimen/dimen_13"
        android:paddingLeft="@dimen/dimen_12"
        android:paddingRight="@dimen/dimen_13"
        android:paddingStart="@dimen/dimen_12" />

    <LinearLayout
        android:id="@+id/scan_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/prl_2"
        android:orientation="horizontal"
        android:visibility="gone" >

        <include layout="@layout/zxingsacn_layout" />
    </LinearLayout>
</LinearLayout>