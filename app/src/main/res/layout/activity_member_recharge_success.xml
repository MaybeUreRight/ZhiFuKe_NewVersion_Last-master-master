<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MemberRechargeSuccessActivity">

    <include
        android:id="@+id/mrs_titlecontaienr"
        layout="@layout/title"/>

    <RelativeLayout
        android:id="@+id/mrs_success_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mrs_titlecontaienr"
        android:layout_marginEnd="@dimen/dimen_10"
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/white">

        <TextView
            android:id="@+id/mrs_success_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_22"
            android:text="@string/pay_success"
            android:textColor="#333333"
            android:textSize="@dimen/font_18"
            />

        <ImageView
            android:id="@+id/mrs_success_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mrs_success_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_17"
            android:src="@drawable/done"/>

        <LinearLayout
            android:id="@+id/pay_amount_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mrs_success_iv"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/pay_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_12"
                android:layout_marginTop="@dimen/dimen_23"
                android:text="@string/number_sample_1"
                android:textSize="@dimen/font_26"
                />

            <TextView
                android:id="@+id/pay_amount_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_23"
                android:text="@string/unit_two"
                android:textSize="@dimen/font_26"
                />
        </LinearLayout>

        <View
            android:id="@+id/mrs_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_below="@id/pay_amount_container"
            android:layout_marginEnd="@dimen/dimen_10"
            android:layout_marginStart="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_12"
            android:background="#dedede"/>

        <include
            android:id="@+id/mrs_content"
            layout="@layout/mrs_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mrs_divider"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/mrs_success_done"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_below="@id/mrs_success_container"
        android:layout_marginEnd="@dimen/dimen_65"
        android:layout_marginStart="@dimen/dimen_65"
        android:layout_marginTop="@dimen/dimen_20"
        android:background="@drawable/success_backgroud"
        android:gravity="center"
        android:text="@string/pay_done"
        android:textColor="@color/white"
        android:textSize="@dimen/font_15"/>


</RelativeLayout>