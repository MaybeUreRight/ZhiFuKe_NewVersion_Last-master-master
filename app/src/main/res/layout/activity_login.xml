<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <!--android:paddingTop="@dimen/pixel_50"-->
    <include layout="@layout/background" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/user_name"
        style="@style/login_edtitext_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_26"
        android:digits="0123456789"
        android:drawableLeft="@drawable/merchantcode"
        android:drawablePadding="@dimen/dimen_9"
        android:drawableStart="@drawable/merchantcode"
        android:hint="@string/merchant_code"
        android:maxLines="1"
        android:paddingBottom="@dimen/dimen_12"
        android:paddingTop="@dimen/dimen_20"
        android:text="90917" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/merchant_code"
        style="@style/login_edtitext_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789"
        android:drawableLeft="@drawable/operator"
        android:drawablePadding="@dimen/dimen_9"
        android:drawableStart="@drawable/operator"
        android:hint="@string/user_name"
        android:maxLines="1"
        android:paddingBottom="@dimen/dimen_12"
        android:paddingTop="@dimen/dimen_20"
        android:text="666" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/user_password"
        style="@style/login_edtitext_font"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:digits="0123456789"
        android:drawableLeft="@drawable/password"
        android:drawablePadding="@dimen/dimen_9"
        android:drawableStart="@drawable/password"
        android:hint="@string/user_password"
        android:inputType="numberPassword"
        android:maxLines="1"
        android:paddingBottom="@dimen/dimen_12"
        android:paddingTop="@dimen/dimen_20"
        android:text="000000" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_40"
        app:cardCornerRadius="@dimen/dimen_12"
        app:cardElevation="@dimen/dimen_5"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/login"
            style="@style/login_button_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_button_backgroud"
            android:text="@string/login" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/sn_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30"
        android:gravity="center"
        style="@style/login_sn_font"
        android:padding="@dimen/dimen_10" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/version_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/login_sn_font"
        android:padding="@dimen/dimen_10" />
</android.support.v7.widget.LinearLayoutCompat>