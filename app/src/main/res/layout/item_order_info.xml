<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/dimen_6"
                android:paddingEnd="@dimen/dimen_15"
                android:paddingStart="@dimen/dimen_15">

    <TextView
        android:id="@+id/item_order_info_order_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_17"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="#333333"
        android:textSize="@dimen/font_16"/>

    <TextView
        android:id="@+id/item_order_info_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_order_info_order_number"
        android:layout_marginTop="@dimen/dimen_9"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="#999999"
        android:textSize="@dimen/font_13"/>

    <TextView
        android:id="@+id/item_order_info_order_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_below="@id/item_order_info_order_number"
        android:layout_marginTop="@dimen/dimen_17"
        android:maxLines="1"
        android:text="@string/app_name"
        android:textColor="#333333"
        android:textSize="@dimen/font_16"/>

</RelativeLayout>