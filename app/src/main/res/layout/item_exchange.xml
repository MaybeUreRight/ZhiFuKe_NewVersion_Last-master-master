<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dimen_57"
                                    android:layout_marginEnd="@dimen/dimen_5"
                                    android:layout_marginLeft="@dimen/dimen_5"
                                    android:layout_marginRight="@dimen/dimen_5"
                                    android:layout_marginStart="@dimen/dimen_5"
                                    android:layout_marginTop="@dimen/dimen_5"
                                    app:cardCornerRadius="@dimen/dimen_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_exchange_icon"
            android:layout_width="@dimen/dimen_37"
            android:layout_height="@dimen/dimen_37"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_marginStart="@dimen/dimen_8"
            android:src="@drawable/exchange_wechat"/>

        <TextView
            android:id="@+id/item_exchange_typename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginStart="@dimen/dimen_12"
            android:layout_toEndOf="@id/item_exchange_icon"
            android:layout_toRightOf="@id/item_exchange_icon"
            android:maxLines="1"
            android:text="@string/exchange_1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/item_exchange_typename"
            android:layout_toRightOf="@id/item_exchange_typename"
            android:gravity="end"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/item_exchange_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end|bottom"
                android:maxLines="1"
                android:text="@string/number_sample_1"
                android:textColor="#333333"
                android:textSize="@dimen/font_21"/>

            <TextView
                android:id="@+id/item_exchange_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_11"
                android:layout_marginRight="@dimen/dimen_11"
                android:maxLines="1"
                android:text="@string/unit_two"
                android:textColor="#333333"
                android:textSize="@dimen/font_14"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>