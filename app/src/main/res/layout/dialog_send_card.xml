<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line_shane">

    <RelativeLayout
        android:id="@+id/card_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/transparent"
        android:minWidth="300dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_title"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:text="卡券详情"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/mid_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text="xxx"
            android:textColor="@color/red_hight"
            android:textSize="22sp"/>

        <View
            android:id="@+id/card_delivery"
            android:layout_width="280dp"
            android:layout_height="1dp"
            android:layout_below="@+id/card_title"
            android:layout_margin="4dp"
            android:background="@color/gray1">
        </View>

        <LinearLayout
            android:id="@+id/card_info_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_title"
            android:background="@drawable/bg_line_shane"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/card_title_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="2"
                    android:text="卡券名称："
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/card_stock_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:text="库存："
                    android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/card_date_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="有效日期："
                    android:textSize="20sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@color/white_smoke"
                android:text="使用须知："
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/card_info_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="@color/gray"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@color/white_smoke"
                android:text="优惠说明："
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/card_prefer_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="@color/gray"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@color/white_smoke"
                android:text="奖励说明"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/card_mission_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="@color/red_hight"
                android:textSize="20sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/coupon_code_iv"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_below="@+id/card_info_ll"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@drawable/bg_line_shane"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coupon_code_iv"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_info_title"
                android:background="@drawable/btn_yellow_small"
                android:gravity="center"
                android:minHeight="60dp"
                android:text="取  消"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btn_sure"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btn_cancel"
                android:layout_toRightOf="@+id/btn_cancel"
                android:background="@drawable/btn_green_small"
                android:gravity="center"
                android:minHeight="60dp"
                android:text="打印卡券"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>