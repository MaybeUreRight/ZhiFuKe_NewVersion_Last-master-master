    <com.weilay.pos2.view.HorizontalListView
        android:id="@+id/choose_pay_hlv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/dimen_5"
        android:layout_marginStart="@dimen/dimen_5"
        android:layout_weight="3">
    </com.weilay.pos2.view.HorizontalListView>

    <FrameLayout
        android:id="@+id/pay_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15">

        <include
            android:id="@+id/other_payment"
            layout="@layout/fragment_pay"/>

        <include
            android:id="@+id/cash_payment"
            layout="@layout/fragment_cash"/>

        <include
            android:id="@+id/premission_ll"
            layout="@layout/fragment_permission"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_50"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/dimen_12"
        android:paddingStart="@dimen/dimen_12"
        >

        <android.support.v7.widget.CardView
            android:id="@+id/psa_scan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/dimen_12"
            app:cardElevation="@dimen/dimen_5"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false">

            <TextView
                android:id="@+id/psa_scan_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/payselect_scan"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/psa_qrcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dimen_9"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="@dimen/dimen_12"
            app:cardElevation="@dimen/dimen_5"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false">

            <TextView
                android:id="@+id/psa_qrcode_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/payselect_qrcode"
                android:textColor="@color/white"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>


