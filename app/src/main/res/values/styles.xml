<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 除去title -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@null</item>
        <!-- 除去背景色 -->
        　
    </style>
    <!-- 自定义loading dialog -->
    <style name="loading_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>


    <style name="login_edtitext_font">
        <item name="android:textColor">@color/login_edittext_font</item>
        <item name="android:textSize">@dimen/font_15</item>
    </style>

    <style name="login_sn_font">
        <item name="android:textColor">@color/login_edittext_font</item>
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="login_button_font">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_15</item>
    </style>

    <style name="device_info_left">
        <item name="android:textColor">@color/device_info_left</item>
        <item name="android:textSize">@dimen/font_15</item>
    </style>

    <style name="device_info_right">
        <item name="android:textColor">@color/device_info_right</item>
        <item name="android:textSize">@dimen/font_12</item>
    </style>

    <style name="index_pay">
        <item name="android:textColor">@color/index_pay</item>
        <item name="android:textSize">@dimen/font_18</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="mrs_content_left">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/font_13</item>
    </style>

    <style name="mrs_content_right">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/font_13</item>
    </style>


    <!-- dialog的弹出动画 -->
    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_show_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_dismiss_anim</item>
    </style>

    <style name="dialog_no_title" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:background">@null</item>
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item><!-- 半透明 -->
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item><!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">false</item><!-- 模糊 -->
    </style>

    <!-- keyboard_item style -->
    <style name="keyboard_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_key</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
    </style>

</resources>
